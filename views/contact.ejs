<h2 class="text-center mb-4">Contact Me</h2>

<div class="contact-card">
<form action="/contact" method="POST" class="contact-box">
  <!-- Name -->
  <div class="input-group-block">
    <label>Name:</label>
    <input type="text" name="name" class="form-control custom-input" />
  </div>

  <!-- Email -->
  <div class="input-group-block">
    <label>Email:</label>
    <input type="email" name="email" class="form-control custom-input" />
  </div>

  <!-- Message -->
  <div class="input-group-block">
    <label class="message-label">Message</label>
    <textarea name="message" rows="6" class="form-control custom-textarea"></textarea>
  </div>

  <!-- Captcha + Send Row -->
  <div class="captcha-row">
    <div class="captcha-box">
      <label>Captcha: 2 + 2 = ?</label>
      <input type="text" name="captcha" class="form-control captcha-input" />
    </div>

    <button class="send-btn">Send</button>
  </div>
</form>
</div>

